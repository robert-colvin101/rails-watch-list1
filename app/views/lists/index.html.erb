
<div class="container">
<h1 class="text-center text-secondary"> My Movie Lists</h1>


<div class="dashboard">
  <div class="cards">
    <% @lists.each do |list| %>
    <% if list.photo.attached? %>
    <div class="card rounded" style="width: 10rem;">
      <img class="card-img-top rounded-top rounded-2" src="<%= cl_image_path list.photo.key, height: 300, width: 400, crop: :fill %>">
      <div class="card-body">
        <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
      </div>
    </div>
    <% else %>
    <div class="card" style="width: 10rem;">
      <img class="card-img-top" src="<%= cl_image_path 'mpcbkybwarsywo7znb5z', height: 300, width: 400, crop: :fill %>">
      <div class="card-body">
        <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
      </div>

    </div>
    <% end %>
    <% end %>
  </div>
</div>
<div class="p-2">
  <%=  link_to 'Create a new list', list_path('new') %>
</div>
</div>
